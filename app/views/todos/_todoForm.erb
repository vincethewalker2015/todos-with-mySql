<div align="center">

  <h2>Create a New Todo</h2>

  <%= form_for @todo do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

</div>